<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="#FF0000">

    <TextView android:text="@string/time_end" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_end"
        android:textSize="35sp"
        android:textColor="#FF00FF"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pace_end"
        android:id="@+id/pace_end"
        android:textSize="35sp"

        android:textColor="#FF00FF"
        android:layout_below="@+id/time_end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speed_end"
        android:id="@+id/speed_end"
        android:textSize="35sp"
        android:textColor="#FF00FF"
        android:layout_below="@+id/pace_end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_button_bottom"
        android:id="@+id/end_button_bottom"
        android:layout_marginBottom="49dp"
        android:textSize="50sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_song_end"
        android:id="@+id/current_song_end"
        android:textColor="#FF00FF"
        android:textSize="35sp"
        android:layout_below="@+id/speed_end"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
